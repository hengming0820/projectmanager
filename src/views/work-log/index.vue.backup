const fetchActiveUsers = async () => {
  try {
    const res: any = await userApi.getUsers({ status: 'active', size: 9999 })
    const list: any[] = res?.list || res?.data?.list || res?.data || []
    userOptions.value = list.map((u: any) => ({
      label: u.real_name || u.username,
      value: u.id
    }))
    // æŒ‰è§’è‰²æ˜ å°„ç”¨æˆ·IDé›†åˆ
    const roleMap: Record<string, string[]> = {}
    list.forEach((u: any) => {
      const role = (u.role || '').toLowerCase()
      if (!roleMap[role]) roleMap[role] = []
      roleMap[role].push(u.id)
    })
    userIdByRole.value = roleMap
  } catch (e) {
    userOptions.value = []
  }
}

const toggleRole = (role: string) => {
  const set = activeRoles.value
  if (set.has(role)) {
    set.delete(role)
  } else {
    set.add(role)
  }
  // æ ¹æ®é€‰ä¸­è§’è‰²åˆå¹¶ç”¨æˆ·
  const ids: string[] = []
  set.forEach(r => {
    const arr = userIdByRole.value[r]
    if (arr) ids.push(...arr)
  })
  // å»é‡åˆå¹¶
  const merged = Array.from(new Set([...(weekForm.coveredUserIds || []), ...ids]))
  weekForm.coveredUserIds = merged
}

