const addDays = (dateStr: string, days: number): string => {
  const d = new Date(dateStr)
  d.setDate(d.getDate() + days)
  return d.toISOString().split('T')[0]
}

const getISOWeek = (d: Date): number => {
  const target = new Date(Date.UTC(d.getFullYear(), d.getMonth(), d.getDate()))
  const dayNum = target.getUTCDay() || 7
  target.setUTCDate(target.getUTCDate() + 4 - dayNum)
  const yearStart = new Date(Date.UTC(target.getUTCFullYear(), 0, 1))
  return Math.ceil((((target.getTime() - yearStart.getTime()) / 86400000) + 1) / 7)
}

const generateWeekTitleFromDate = (monday: Date, group: string) => {
  const year = monday.getFullYear()
  const weekNo = getISOWeek(monday)
  const weekStr = String(weekNo).padStart(2, '0')
  return `${year}W${weekStr}${group}å·¥ä½œè®¡åˆ’`
}

const submitWeekForm = async () => {
  try {
    await weekFormRef.value.validate()
    await titleFormRef.value.validate()
    await basicFormRef.value.validate()

    submitting.value = true

    const monday0 = weekForm.dateRange[0]
    const friday0 = weekForm.dateRange[1]
    const count = Math.max(1, Math.min(12, Number(weekForm.weekCount || 1)))

    if (!editingWeek.value && count > 1) {
      for (let i = 0; i < count; i++) {
        const monday = addDays(monday0, i * 7)
        const friday = addDays(friday0, i * 7)
        const title = generateWeekTitleFromDate(new Date(monday), weekForm.workGroup)
        const data: WorkWeekCreate = {
          title,
          week_start_date: monday,
          week_end_date: friday,
          description: weekForm.description || undefined,
          config: { covered_user_ids: weekForm.coveredUserIds }
        } as any
        await workWeekApi.createWorkWeek(data)
      }
      ElMessage.success(`å·²åˆ›å»º ${count} ä¸ªå·¥ä½œå‘¨`)
    } else {
      const data: WorkWeekCreate | WorkWeekUpdate = {
        title: weekForm.title,
        week_start_date: monday0,
        week_end_date: friday0,
        description: weekForm.description || undefined,
        config: { covered_user_ids: weekForm.coveredUserIds }
