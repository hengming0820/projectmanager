      if (editingWeek.value) {
        await workWeekApi.updateWorkWeek(editingWeek.value.id, data as WorkWeekUpdate)
        ElMessage.success('æ›´æ–°æˆåŠŸ')
      } else {
        await workWeekApi.createWorkWeek(data as WorkWeekCreate)
        ElMessage.success('åˆ›å»ºæˆåŠŸ')
      }
    }

    showCreateWeekDialog.value = false
    resetWeekForm()
    fetchWorkWeeks()
  } catch (error) {
    console.error('æäº¤å¤±è´¥:', error)
    ElMessage.error(editingWeek.value ? 'æ›´æ–°å¤±è´¥' : 'åˆ›å»ºå¤±è´¥')
