// è·å–å½“å‰å‘¨æ•°
const getCurrentWeekNumber = (): number => {
  const now = new Date()
  const start = new Date(now.getFullYear(), 0, 1)
  const diff = now.getTime() - start.getTime()
  const oneWeek = 1000 * 60 * 60 * 24 * 7
  return Math.ceil(diff / oneWeek)
}

// è‡ªåŠ¨è®¾ç½®ä¸‹ä¸€å‘¨çš„ [å‘¨ä¸€, å‘¨äº”]
const initNextWeekRange = () => {
  // å¦‚æœåˆ—è¡¨å·²æœ‰æ•°æ®ï¼Œå–ç¬¬ä¸€ä¸ªï¼ˆæœ€æ–°ï¼‰å·¥ä½œå‘¨ï¼Œæ¨ä¸€å‘¨ï¼›å¦åˆ™ä»¥å½“å‰å‘¨æ¨ä¸€å‘¨
  const latest = workWeeks.value && workWeeks.value.length > 0 ? workWeeks.value[0] : null
  let baseMonday: Date
  if (latest) {
    const lastEnd = new Date(latest.week_end_date)
    baseMonday = new Date(lastEnd)
    baseMonday.setDate(lastEnd.getDate() + 3) // å‘¨äº”å +3 å¤© = ä¸‹å‘¨ä¸€
  } else {
    const today = new Date()
    const day = today.getDay()
    const diff = today.getDate() - day + (day === 0 ? -6 : 1)
    baseMonday = new Date(today.setDate(diff))
    baseMonday.setDate(baseMonday.getDate() + 7) // ä¸‹ä¸€å‘¨
  }
  const friday = new Date(baseMonday)
  friday.setDate(baseMonday.getDate() + 4)
  weekForm.dateRange = [baseMonday.toISOString().split('T')[0], friday.toISOString().split('T')[0]]
}

